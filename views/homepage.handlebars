<!DOCTYPE html>
<html lang="en">

<head>
    <title>CryptoTracker - Homepage</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/homepage.css">
</head>

<body>




    <div class="header">
        <div><a href="/homepage">Homepage</a></div>
        <div><a href="/buy-sell">Buy/Sell Order</a></div>
        <div><a href="/transaction-history">Transaction History</a></div>
        <div><a href="/about-us">About Us</a></div>
        <div><a href="/">Logout</a></div>
    </div>



    <div class="content">

        <div class="content-children">

            <div class="column-title">Your Portfolio</div>
            <div class="scroller-half">
                <table>
                    <thead>
                        <tr>
                            <th class="tbl-header">Crypto Name</th>
                            <th class="tbl-header">Amount</th>
                            <th class="tbl-header">Price</th>
                            <th class="tbl-header">Value</th>
                            <th class="tbl-header">Cost</th>
                            <th class="tbl-header">Profit</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each cryptoholdings}}
                        <tr>
                            <td class="tbl-content">{{this.crypto_name}}</td>
                            <td class="tbl-content">{{this.crypto_amount}}</td>
                            <td class="tbl-content">{{this.crypto_price}}</td>
                            <td class="tbl-content">{{this.crypto_value}}</td>
                            <td class="tbl-content">{{this.crypto_cost}}</td>
                            <td class="tbl-content">{{this.crypto_profit}}</td>
                        </tr>
                        {{/each}}

                    </tbody>

                </table>
            </div>



            <div class="content-image">
                <div class="column-title">New Coins available!</div>


                <div class="slide-main">

                    <div class="slide-button-left">
                        <button class="btn" onclick="AddSlide(-1)">&#10094;</button>
                    </div>
                    <div class="slideshow">


                        <img class="NewCoins" src="/photo/cardano.svg">
                        <img class="NewCoins" src="/photo/dogecoin.svg">
                        <img class="NewCoins" src="/photo/litecoin.svg">
                        <img class="NewCoins" src="/photo/tether.svg">
                        <img class="NewCoins" src="/photo/vet.svg">
                        <p class="CoinSources">Sources: https://worldvectorlogo.com/logo/cardano</p>
                        <p class="CoinSources">Sources: https://worldvectorlogo.com/logo/dogecoin</p>
                        <p class="CoinSources">Sources: https://worldvectorlogo.com/logo/litecoin</p>
                        <p class="CoinSources">Sources: https://worldvectorlogo.com/logo/tether</p>
                        <p class="CoinSources">Sources: https://worldvectorlogo.com/logo/ven-1</p>


                    </div>

                    <div class=" slide-button-right">
                        <button class="btn" onclick="AddSlide(1)">&#10095;</button>
                    </div>
                </div>

            </div>





        </div>

        <div class="content-children">
            <div class="column-title">Real-Time Quotes</div>
            <div class=" scroller">
                <table>
                    <thead>
                        <tr>
                            <th class="tbl-header">Crypto Name</th>
                            <th class="tbl-header">Price</th>

                        </tr>
                    </thead>
                    <tbody>

                        {{#each all_crypto}}
                        <tr>
                            <td class="tbl-content">{{this.crypto_name}}</td>
                            <td class="tbl-content">{{this.crypto_price}}</td>

                        </tr>
                        {{/each}}
                    </tbody>

                </table>
            </div>
        </div>

    </div>


    <div class="footer-main">
        <p class="footer-p"> If you want to purchase cryptocurrency, you may visit:</p>

        <div>
            <div>
                <a href="https://www.binance.com/en">
                    <img src="/photo/binance.svg" height="60px" width="140px">
                </a>
            </div>
            <div style="font-size = 3px; width = 70px; word-wrap: break-word">
                Photo Sources:
                <br>
                https://seeklogo.com/vector-logo/323353/binance-exchange
            </div>
        </div>


        <div>
            <div>
                <a href="https://www.bitfinex.com/">
                    <img src="/photo/bitfinex.svg" height="60px" width="140px">
                </a>
            </div>
            <div style="font-size = 3px width = 70px word-wrap: break-word">
                Photo Sources:
                <br>
                https://seeklogo.com/vector-logo/323387/bitfinex
            </div>
        </div>



        <div>
            <div>
                <a href="https://www.coinbase.com/">
                    <img src="/photo/Coinbase.svg" height="60px" width="140px">
                </a>
            </div>
            <div style="font-size = 3px width = 70px word-wrap: break-word">
                Photo Sources:
                <br>
                https://seeklogo.com/vector-logo/402702/coinbase-new-2021
            </div>
        </div>

    </div>



    <script>
        var slideno = 1;
        DisplaySlide(slideno);

        var refresh = window.setInterval(function () {
            AddSlide(1)
        }, 5000);


        function AddSlide(n) {
            DisplaySlide(slideno += n);
        }

        function DisplaySlide(n) {
            var i;
            var CoinsGroup = document.getElementsByClassName("NewCoins");
            var SourceGroup = document.getElementsByClassName("CoinSources");
            if (n > CoinsGroup.length) { slideno = 1 }
            if (n < 1) { slideno = CoinsGroup.length }
            for (i = 0; i < CoinsGroup.length; i++) {
                CoinsGroup[i].style.display = "none";
                SourceGroup[i].style.display = "none";
            }
            CoinsGroup[slideno - 1].style.display = "block";
            SourceGroup[slideno - 1].style.display = "block";
        }
    </script>


</body>

</html>